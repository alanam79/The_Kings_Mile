<article class="book">
  <div class="title">
    <a href="{{book.book_url}}" target="_blank">{{book.title}}</a>
    <span>({{book.book_url}})</span>
  </div>
  <div class="meta">
    {{book.vote_count}}
    point(s) by
    {{book.user.username}}
    on
    {{book.created_at}}
    |
    <a href="/book/{{book.id}}">{{book.comments.length}} comment(s)</a>
  </div>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">like</button>
  </div>
</form>

{{! shows the comments entered into the comment box }}
<div class="comments">
  {{#each book.comments}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>

<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>