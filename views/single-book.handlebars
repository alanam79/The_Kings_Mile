{{!-- being called by partial in book-info --}}
{{> book-info book }}

{{! the #if is preventing the comment form and vote button from showing unless logged in }}
{{#if loggedIn}}
  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">add comment</button>
      <button type="button" class="upvote-btn">upvote</button>
    </div>
  </form>
{{/if}}

{{> comments book.comments}}

{{! only render the comment button and vote button when the user is logged in }}
{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
  <script src="/javascript/upvote.js"></script>
{{/if}}