<link rel="stylesheet" href="/stylesheets/single-book.css" />
<section class="hd-single-book" id="hd-single-book">


  <div class="card" id="hd-single-card">
    <img src="/images/{{book.book_img}}" alt="">

    <div class="flex-row justify-center">
      <h2>{{book.title}}</h2>
      {{#if book.published_date}}
       Published on:{{book.published_date}}
      {{/if}}
      <p>By: {{book.author}} <br>
          Pages: {{book.pages}} <br>
          {{book.vote_count}} Like(s) <br>
      </p>
      {{#if book.purchase_link}}
      <p>Want to buy the book?
        <a href="https://www.amazon.com{{book.purchase_link}}" class="card">Click Here!</a>
      </p>
      {{else}}
      <p>This book is no longer being published by the author</p>
      {{/if}}
  </div>
</section>


<section class="comment-box">
{{#if loggedIn}} 
  <form class="comment-form">
  {{> comments book.comments}}
    <div>
      <label for="Comment on this book!"></label>
      <textarea name="comment-body" class="comment-body" rows="6" cols="85" spellcheck="true"></textarea>
    </div>
    <div class="btn-group">
      <button type="submit" class= "btn-no-style">Comment</button>
      <button type="button" class="upvote-btn">Like</button>
      <button id = "home" class= "btn-no-style"> <a href="/dashboard">Back to Library</a></button>
    </div>
  </form>
  {{/if}}
</section> 

{{! the #if is preventing the comment form and vote button from showing unless logged in }}
   

{{! only render the comment button and vote button when the user is logged in }}
{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
  <script src="/javascript/upvote.js"></script>
{{/if}}
