<ol class="book-list">
  {{#each books}}
    <li>
      <article class="book">
        <div class="title">
          <a
            href="https://en.wikipedia.org/wiki/It_(novel)"
            target="_blank"
          >{{title}} {{author}} {{pages}}</a>
          <span>(https://en.wikipedia.org/wiki/It_(novel))</span>
        </div>
        <div class="meta">
          {{vote_count}}
          point(s) by
          {{user.username}}
          on
          {{created_at}}
          |
          <a href="/book/{{id}}">{{comments.length}} comment(s)</a>
        </div>
      </article>
    </li>
  {{/each}}
</ol>